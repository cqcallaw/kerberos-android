<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:paddingLeft="5px"
            android:text="Enter Principal Name:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="6pt" >
        </TextView>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:paddingLeft="5px"
            android:text="Enter Password:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="6pt" >
        </TextView>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px" >
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:text="Defaults:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="5pt"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:text="conf file: /data/local/kerberos/krb5.conf"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="4.5pt" >
        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:text="keytab file: /data/local/kerberos/krb5.keytab"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="4.5pt" >
        </TextView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:text="ccache: /data/local/kerberos/ccache/krb5cc_[uid]"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="4.5pt" >
        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5px"
            android:text="Server settings: KerberosAppActivity.java"
            android:textSize="4.5pt" >
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <Button
                android:id="@+id/button1"
                android:layout_width="120px"
                android:layout_height="32dp"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:text="kinit"
                android:textSize="5pt" >
            </Button>

            <Button
                android:id="@+id/btnList"
                android:layout_width="100px"
                android:layout_height="32dp"
                android:layout_marginTop="10px"
                android:layout_weight="0.47"
                android:text="klist"
                android:textSize="5pt" >
            </Button>

            <Button
                android:id="@+id/btnVno"
                android:layout_width="100px"
                android:layout_height="32dp"
                android:layout_marginTop="10px"
                android:layout_weight="0.45"
                android:text="kvno"
                android:textSize="5pt" >
            </Button>

            <Button
                android:id="@+id/btnDestroy"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="10px"
                android:text="kdestroy"
                android:textSize="5pt" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/startButton"
                android:layout_width="315dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="4px"
                android:text="Start Client App"
                android:textStyle="bold" >
            </Button>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="#cccccc"
            android:paddingLeft="5px"
            android:paddingTop="10px" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text=""
                android:textColor="#000"
                android:textSize="2pt" >
            </TextView>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>